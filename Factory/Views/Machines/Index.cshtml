@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Silly Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machine types have been registered yet. Please choose <em>Add New Machine</em> to get started.</h3>
}
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink(machine.Name, "Details", new { id = machine.MachineId })
        <br>
        <span class="commands">
          [@Html.ActionLink("details", "Details", new { id = machine.MachineId })]
          [@Html.ActionLink("edit", "Edit", new { id = machine.MachineId })]
          [@Html.ActionLink("delete", "Delete", new { id = machine.MachineId })]
        </span>
      </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add New Machine", "Create")</p>